<!-- Select2 -->
<script src="~/lib/select2/js/select2.full.min.js"></script>
<!-- DataTables -->
<script src="~/lib/datatables/js/jquery.dataTables.js"></script>
<script src="~/lib/datatables/js/dataTables.bootstrap4.js"></script>
<script>

    function filterColumn(i) {
        $('#mainTable').DataTable().column(i).search(
            $('#col' + i + '_filter').val()
        ).draw();
    }

    // Función para eliminar registro
    function deleteItem() {
        var item = $(this).data("item");
        var idItem = $(this).val();
        var formUrl = $('form').attr('action');
        var token = $('input[name="__RequestVerificationToken"]').val();
        var url = window.location.href.split('?')[0];
        Swal.fire({
            title: '¿Eliminar ' + item + '?',
            text: '¿Seguro desea eliminar?',
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#d33',
            cancelButtonColor: '#3085d6',
            confirmButtonText: 'Si, eliminar'
        }).then((result) => {
            if (result.isConfirmed) {
                $.ajax({
                    url: formUrl,
                    type: 'POST',
                    data: {
                        __RequestVerificationToken: token,
                        id: idItem
                    },
                    success: function () {
                        location.replace(url);
                    },
                    error: function () {
                        alert('Error de conexión con el servidor');
                    }
                });
            }
        });
    }

    // Función principal
    $(function () {
        $('.btn-delete').on('click', deleteItem);

        $("#mainTable").DataTable({
            language: {
                "decimal": "",
                "emptyTable": "No hay información",
                "info": "Mostrando _START_ de _END_ de _TOTAL_ filas",
                "infoEmpty": "Mostrando 0 to 0 of 0 filas",
                "infoFiltered": "(Filtrado de _MAX_ total filas)",
                "infoPostFix": "",
                "thousands": ",",
                "lengthMenu": "Mostrar _MENU_ filas",
                "loadingRecords": "Cargando...",
                "processing": "Procesando...",
                "search": "Buscar:",
                "zeroRecords": "Sin resultados encontrados",
                "paginate": {
                    "first": "Primero",
                    "last": "Ultimo",
                    "next": "Siguiente",
                    "previous": "Anterior"
                }
            }
        });

        //Initialize Select2 Elements
        $('.select2').select2();

        $('input.column_filter').on('keyup click', function () {
            filterColumn($(this).attr('data-column'));
        });

        $('select.column_filter').on('change', function () {
            filterColumn($(this).attr('data-column'));
        });

        $("#btnLimpiarFiltros").on('click', function () {
            $(".column_filter").val("").keyup();
            $(".column_filter.select2").val("").change();
            $('#mainTable').DataTable().search("").draw();
        });

    });

</script>