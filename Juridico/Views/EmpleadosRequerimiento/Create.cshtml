@model Juridico.Models.EmpleadosRequerimiento

@{
    ViewData["Title"] = "Create";
}

@{
    ViewData["Title"] = "Agregar Acciones Empleado";
    ViewData["CardTitle"] = "Acciones Empleado";
}

<div class="row">
    <div class="col-lg-8 offset-lg-2">
        <!-- general form elements -->
        <div class="card card-secondary">
            <div class="card-header">
                <h3 class="card-title">@ViewBag.CardTitle</h3>
            </div>
            <!-- /.card-header -->
            <!-- form start -->
            <form asp-action="Create" enctype="multipart/form-data">
                <div class="card-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="DatosEmpleadosId" class="control-label">Empleado</label>
                        <select asp-for="DatosEmpleadosId" class="form-control" asp-items="ViewBag.Usuarios">
                            <option value="0">Seleccione una opción</option>
                        </select>
                        <span asp-validation-for="DatosEmpleadosId" class="text-danger"></span>
                    </div>


                    <div class="form-group">
                        <label asp-for="RequerimientoId" class="control-label">Seleccione las acciones a relizar por este perfil</label>
                        <select id="requerimientos" asp-for="RequerimientoId" class="form-control select2-ajax" multiple="multiple" style="width: 100%;" asp-items="ViewBag.RequerimientoId">
                        </select>
                        <span asp-validation-for="RequerimientoId" class="text-danger"></span>
                    </div>
                    
                </div>
                <!-- /.card-body -->

                <div class="card-footer">
                    <div class="row">
                        <div class="col-4">
                            <button type="submit" class="btn btn-success btn-block"><i class="fa fa-save"></i> Guardar</button>
                        </div>
                        <div class="col-4">

                        </div>
                        <div class="col-4">
                            <a class="btn btn-default btn-block" asp-action="Index"><i class="fa fa-arrow-left"></i> Regresar</a>
                        </div>
                    </div>
                </div>

            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

        <!-- Select2 -->
        <script src="~/lib/select2/js/select2.full.min.js"></script>
        <!-- JasnyBootstrap -->
        <script src="~/lib/jasny-bootstrap/js/jasny-bootstrap.min.js"></script>

        <script type="text/javascript">
            $(function () {
                //Initialize Select2 Elements
                $('.select2').select2();
                $('.select2-ajax').select2();
            })
        </script>


    }
