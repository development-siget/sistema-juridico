                   // $("#PersonaId").val(data[0].PersonaId);
                    //  $("#nombreremitente").val(data.nombreremitente); //asigno valor id a textbox
                    $("#dc_nombres").val(data.Nombres);
                },
                error: function () {
                    alert('Error de conexión con el servidor.');
                }
            });

        }

