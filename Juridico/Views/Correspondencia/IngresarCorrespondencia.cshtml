                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label asp-for="PersonaPresento.Email" class="control-label"></label>
                                    <input asp-for="PersonaPresento.Email" class="form-control" />
                                    <span asp-validation-for="PersonaPresento.Email" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
                <div class="modal-footer justify-content-between">
                    <button type="button" class="btn btn-default" data-dismiss="modal"><i class="fa fa-times-circle"></i> Cerrar</button>
                    <button type="submit" class="btn btn-primary"><i class="fa fa-check-circle"></i>Agregar Persona</button>
                </div>
            </form>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>




@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <!-- Select2 -->
    <script src="~/lib/select2/js/select2.full.min.js"></script>
    <!-- JasnyBootstrap -->
    <script src="~/lib/jasny-bootstrap/js/jasny-bootstrap.min.js"></script>



    <script type="text/javascript">


        function getRemitente() {
            var RemitenteId = $("#RemitenteId").val();

            //console.log(RemitenteId);

            $.ajax({
                url: `/api/Remitentes/Formulario/${RemitenteId}`,
                contentType: 'application/json',

                type: 'GET',
                success: function (data) {
                     console.log(data[0].RemitenteId);
                     $("#RemitenteId").val(data[0].RemitenteId);
                    // $("#dc_nombreremitente").val(data[0].RemitenteId);
                    //  $("#nombreremitente").val(data.nombreremitente); //asigno valor id a textbox
                    //  $("#dc_nombreremitente").val(data.NombreRemitente);

                },
                error: function () {
                    alert('Error de conexión con el servidor.');
                }

            });
        }

        function getPersona() {

            console.log("Hello world11!");
            var PersonaId = $("#PersonaPresentoId").val();
            console.log("Hello world!");
            console.log(PersonaId);
